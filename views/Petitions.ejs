<!DOCTYPE html>
<html>
<head>
    <title>Petitions</title>
</head>
<body>
<h1>Petitions</h1>
<form action="/petitions/create" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title"><br><br>
    <label for="description">Description:</label>
    <textarea id="description" name="description"></textarea><br><br>
    <label for="requiredAmountOfSignatures">required amount of signatures:</label>
    <input type="text" id="requiredAmountOfSignatures" name="requiredAmountOfSignatures"><br><br>
    <button type="submit">Create</button>
</form>

<ul>
    <% petitions.forEach(function(petition) { %>
        <li>
            <h2> <a href="/petitions/<%= petition.id%>"> <%= petition.title %> </a></h2>
            <p><%= petition.description %></p>
            <p>required amount of signatures: <%= petition.requiredAmountOfSignatures %></p>
            <form action="/petitions/delete/<%= petition.id%>" method="POST">
                <button type="submit">Delete</button>
            </form>
        </li>
    <% }); %>
</ul>
</body>
</html>